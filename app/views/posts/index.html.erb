
<h1 style = "text-align:center;">David's Blog Posts</h1>

<hr/>


<div class="centered">
  <p id="notice"><%= notice %></p>
  <% @posts.each do |post| %>
    <h2> <%= link_to post.title, post %>  </h2>
    <p>
    <% if post.body.length > @CHAR_LENGTH  %>
      <%= post.body[0..@CHAR_LENGTH] + "..." %>
      <% next %>
    <% else %>
      <%= post.body %>
    <% end %>
    </p>
  <% end %>
  <hr/>

    <%= paginate @posts, :theme => 'twitter-bootstrap-3'%>
  <p>   <%= page_entries_info @posts %> </p>
  <br>
  <p> <%= link_to 'Create New Post!', new_post_path %> </p>

</div>




















